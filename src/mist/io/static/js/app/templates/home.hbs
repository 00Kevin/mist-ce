<div id="home-page" data-role="page" class="ui-page-active ui-page">
    <!-- Page header -->
    <div class="ui-header ui-bar-a">
        <div class="header-grid">
            <div class="ui-grid-b">
                <div class="ui-block-a"><img src="/resources/images/logo.png" id="banner-logo" alt=""></div>
                <div class="ui-block-b"></div>
                <div class="ui-block-c"><div class="user-menu">{{view "userMenu"}}</div></div>
            </div><!-- /grid-b -->
        </div>
    </div>

    <!-- Page Body -->
    <div role="main" class="ui-content" data-theme="c">
        <!-- Add backend button -->

        <div id="add-backend" class="ui-link ui-btn ui-btn-add ui-btn-d ui-shadow" data-role="collapsible" data-collapsed="true">
           <h4>Add cloud</h4>
           {{view "backendAdd"}}
        </div>

        <!-- Backends list -->
        <div id="backend-buttons" data-role="controlgroup" data-type="horizontal"
            class="ui-controlgroup ui-controlgroup-horizontal ui-corner-all ui-caps">
            {{#each Mist.backendsController.content}}
                {{view "backendButton" backendBinding="this"
                       class="ui-btn ui-input-btn ui-corner-all ui-shadow"}}
            {{/each}}
        </div>

        {{#if Mist.backendsController.length}}
        <div class="ui-grid-a ui-responsive">
            <div class="ui-block-a">
                <div class="ui-body">
                    <!-- Navigation -->
                    <ul class="ui-listview ui-listview-inset ui-corner-all ui-shadow ui-caps options-list">
                        <!-- Machines link -->
                        <li class="ui-li-has-count ui-first-child">
                            <a class="ui-btn ui-btn-icon-left icon-machine ui-alt-icon" href="#/machines">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.backendsController.machineCount}}
                                </span>
                                Machines
                            </a>
                        </li>

                        <!-- Images link -->
                        <li class="ui-li-has-count">
                            <a class="ui-btn ui-btn-icon-left icon-image ui-alt-icon" href="#/images">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.backendsController.imageCount}}
                                </span>
                                Images
                            </a>
                        </li>

                        <!-- Networks link -->
                        {{#if Mist.backendsController.hasNetworks}}
                        <li class="ui-li-has-count">
                            <a class="ui-btn ui-btn-icon-left icon-network ui-alt-icon" href="#/networks">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.backendsController.networkCount}}
                                </span>
                                Networks
                            </a>
                        </li>
                        {{/if}}

                        <!-- Keys link -->
                        <li class="ui-li-has-count">
                            <a class="ui-btn ui-btn-icon-left icon-keys ui-alt-icon" href="#/keys">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.keysController.content.length}}
                                </span>
                                Keys
                            </a>
                        </li>

                        {{#if Mist.isCore}}
                        <!-- Scripts link -->
                        <li class="ui-li-has-count">
                            <a class="ui-btn ui-btn-icon-left icon-script ui-alt-icon" href="#/scripts">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.scriptsController.length}}
                                </span>
                                Scripts
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>

            <div {{bind-attr class=":ui-block-b"}}>
                <div class="ui-body">
                    <div class="incidents ui-shadow">
                        <h4>Incidents</h4>
                        <ul class="ui-listview ui-listview-inset ui-corner-all ui-shadow incident-list">
                            {{#unless Mist.openIncidents}}
                            <li class="no incident">
                                <a href="javascript:void(0)" class="icon-check ui-btn ui-btn-icon-right ui-btn">No recent incidents</a>
                            </li>
                            {{/unless}}
                            <li class="incident">
                                <a class="icon-error ui-btn ui-btn-icon-right"
                                    {{action "incidentClicked" this target="view"}}>
                                    <span class="icon-bm"></span>
                                    <span class="machine">
                                        NY:
                                    </span>
                                    <span class="rule-condition">
                                        rule
                                    </span>
                                    <span class="time">11 min ago </span>
                                </a>
                            </li>
                            <li class="incident">
                                <a class="icon-check ui-btn ui-btn-icon-right"
                                    {{action "incidentClicked" this target="view"}}>
                                    <span class="icon-vm"></span>
                                    <span class="machine">
                                        London:
                                    </span>
                                    <span class="rule-condition">
                                        rule
                                    </span>
                                    <span class="duration">
                                        for 12 sec
                                    </span>
                                    <span class="time">12 min ago </span>
                                </a>
                            </li>
                            {{#each Mist.openIncidents}}
                                {{#if this.isClosed}}
                                    <li class="incident">
                                        <a class="icon-check ui-btn ui-btn-icon-right"
                                            {{action "incidentClicked" this target="view"}}>
                                            <span class="machine">
                                                {{this.machineName}}:
                                            </span>
                                            <span class="rule-condition">
                                                {{this.ruleText}}
                                            </span>
                                            <span class="duration">
                                                for {{this.duration}}
                                            </span>
                                            <span class="time">{{this.closed}} ago </span>
                                        </a>
                                    </li>
                                {{else}}
                                    <li class="incident">
                                        <a class="icon-error ui-btn ui-btn-icon-right"
                                            {{action "incidentClicked" this target="view"}}>
                                            <span class="machine">
                                                {{this.machineName}}:
                                            </span>
                                            <span class="rule-condition">
                                                {{this.ruleText}}
                                            </span>
                                            <span class="time">
                                                {{this.prettyTime}}
                                            </span>
                                        </a>
                                    </li>
                                {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- /grid-a -->

        {{view "graphList" actionProxyBinding="view"}}

        {{#if Mist.isCore}}
            <div class="logs ui-shadow" data-role="collapsible" data-collapsed="false">
               <h4>Activity log</h4>
               {{view "logList"}}
            </div>
        {{/if}}
        {{/if}}
    </div>

    {{view "dialog"}}

    {{view "backendEdit"}}
    <div id="add-backend-overlay" class="ui-popup-screen ui-overlay-b ui-screen-hidden"></div>

</div>
