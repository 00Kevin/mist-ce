<div id="home-page" data-role="page" class="ui-page-active ui-page">
    <!-- Page header -->
    <div class="ui-header ui-bar-a">
        <div class="header-grid">
            <div class="ui-grid-b">
                <div class="ui-block-a"><img src="/resources/images/logo.png" id="banner-logo" alt=""></div>
                <div class="ui-block-b"></div>
                <div class="ui-block-c"><div class="user-menu">{{view "userMenu"}}</div></div>
            </div><!-- /grid-b -->
        </div>
    </div>

    <!-- Page Body -->
    <div role="main" class="ui-content" data-theme="c">
        <!-- Add backend button -->
        <div id="add-backend" class="ui-link ui-btn ui-btn-add ui-btn-d ui-shadow floating-collapsible" data-role="collapsible" data-collapsed="true">
           <h4>Add cloud</h4>
           {{view "backendAdd"}}
        </div>

        <!-- Backends list -->
        <div id="backend-buttons" data-role="controlgroup" data-type="horizontal"
            class="ui-controlgroup ui-controlgroup-horizontal ui-caps">
            {{#each Mist.backendsController.model as |backend|}}
                {{view "backendButton" backend=backend
                       class="ui-btn ui-input-btn ui-shadow"}}
            {{/each}}
        </div>

        {{#if Mist.backendsController.model.length}}
        <div class="ui-grid-a ui-responsive">
            <div class="{{if view.hasIncidents '' 'full-width'}} ui-block-a">
                <div class="ui-body">
                    <!-- Navigation -->
                    <ul class="ui-listview ui-listview-inset ui-corner-all ui-shadow ui-caps options-list">
                        <!-- Machines link -->
                        <li class="ui-li-has-count ui-first-child">
                            <a class="ui-btn ui-btn-icon-left icon-machine ui-alt-icon" href="#/machines">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.backendsController.machineCount}}
                                </span>
                                Machines
                            </a>
                        </li>

                        <!-- Images link -->
                        <li class="ui-li-has-count">
                            <a class="ui-btn ui-btn-icon-left icon-image ui-alt-icon" href="#/images">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.backendsController.imageCount}}
                                </span>
                                Images
                            </a>
                        </li>

                        <!-- Networks link -->
                        {{#if Mist.backendsController.hasNetworks}}
                        <li class="ui-li-has-count">
                            <a class="ui-btn ui-btn-icon-left icon-network ui-alt-icon" href="#/networks">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.backendsController.networkCount}}
                                </span>
                                Networks
                            </a>
                        </li>
                        {{/if}}

                        <!-- Keys link -->
                        <li class="ui-li-has-count">
                            <a class="ui-btn ui-btn-icon-left icon-keys ui-alt-icon" href="#/keys">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.keysController.model.length}}
                                </span>
                                Keys
                            </a>
                        </li>

                        {{#if Mist.isCore}}
                        <!-- Scripts link -->
                        <li class="ui-li-has-count">
                            <a class="ui-btn ui-btn-icon-left icon-script ui-alt-icon" href="#/scripts">
                                <span class="ui-li-count ui-body-inherit">
                                    {{Mist.scriptsController.model.length}}
                                </span>
                                Scripts
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
            {{#if view.hasIncidents}}
            <div class="{{if view.hasIncidents '' 'no-width'}} ui-block-b">
                <div class="ui-body">
                    <div class="incidents ui-shadow">
                        <h4>Incidents</h4>
                        <ul class="ui-listview ui-listview-inset ui-corner-all ui-shadow incident-list">
                            {{#unless Mist.openIncidents}}
                            <li class="no incident">
                                <a href="javascript:void(0)" class="icon-check ui-btn ui-btn-icon-right ui-btn">No recent incidents</a>
                            </li>
                            {{/unless}}
                            {{#each Mist.openIncidents as |incident|}}
                                {{#if this.isClosed}}
                                    <li class="incident">
                                        <a class="icon-check ui-btn ui-btn-icon-right"
                                            {{action "incidentClicked" incident target=view}}>
                                            <span class="machine">
                                                {{this.machineName}}:
                                            </span>
                                            <span class="rule-condition">
                                                {{incident.ruleText}}
                                            </span>
                                            <span class="duration">
                                                for {{incident.duration}}
                                            </span>
                                            <span class="time">{{incident.closed}} ago </span>
                                        </a>
                                    </li>
                                {{else}}
                                    <li class="alert incident">
                                        <a class="icon-alert-2 ui-btn ui-btn-icon-right"
                                            {{action "incidentClicked" incident target=view}}>
                                            <span class="machine">
                                                {{incident.machineName}}:
                                            </span>
                                            <span class="rule-condition">
                                                {{incident.ruleText}}
                                            </span>
                                            <span class="time">
                                                {{incident.prettyTime}}
                                            </span>
                                        </a>
                                    </li>
                                {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            {{/if}}
        </div><!-- /grid-a -->

        {{view "graphList" actionProxy=view}}

        {{#if Mist.isCore}}
            <div class="logs ui-shadow" data-role="collapsible" data-collapsed="false">
               <h4>Activity log</h4>
               {{view "logList"}}
            </div>
        {{/if}}
        {{/if}}
    </div>

    <div id="help-tooltip-screen"
        class="ui-popup-screen
            ui-overlay-b
            ui-screen-hidden">
    </div>
    <div id="help-tooltip-popup"
         class="pop
            ui-popup-container
            ui-popup-hidden
            ui-popup-truncate">
        <div id="help-tooltip"
             class="ui-popup
                ui-body-a
                ui-overlay-shadow
                ui-corner-all"
             data-role="popup"
             data-arrow="true"
             data-enhanced="true"
             data-transition="flip">
            <p>{{Mist.backendAddController.helpText}}
                {{#if Mist.backendAddController.helpHref}}
                <a target="_blank" href={{Mist.backendAddController.helpHref}}>
                    Read more...
                </a>
                {{/if}}
            </p>
        </div>
    </div>
</div>

<div id="add-backend-overlay" class="ui-popup-screen ui-overlay-b ui-screen-hidden"
    {{action "addBackendOverlayClicked" target=view}}></div>
