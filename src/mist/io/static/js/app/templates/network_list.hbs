<div id="network-list-page" data-role="page" class="ui-page-active">

    <div data-role="header" data-theme="b">

        <a href="#"
        class="responsive-button ui-btn-left ui-btn ui-icon-home
            ui-btn-icon-left ui-shadow ui-corner-all">Home</a>

        <h1>Networks</h1>

        {{view "userMenu"}}

    </div>

    <div data-role="content" data-theme="a">
        <a id="network-create-btn"
            class="{{if Mist.backendsController.hasOpenStack '' 'ui-disabled'}}
                responsive-button ui-btn ui-btn-d ui-icon-plus ui-btn-icon-right
                ui-shadow"
            {{action "createClicked" target=view}}>Create</a>
        <ul id="networks"
            data-role="listview"
            data-inset="true"
            data-filter="true"
            data-filter-placeholder="Filter..."
            data-theme="c"
            class="checkbox-list">
            {{#each Mist.backendsController as |backend|}}
                {{#if backend.enabled}}
                  {{#each backend.networks as |network|}}
                        {{view "networkListItem"
                            network=network
                            class="checkbox-link"}}
                  {{/each}}
                {{/if}}
            {{/each}}
        </ul>

        <div class="mid-padding"></div>

    </div>

    {{component "dialog-popup"}}

    {{view "networkCreate"}}

    <div class="single-action-footer" data-role="footer" data-theme="b">
        <a class="ui-btn ui-corner-all ui-btn-icon-right ui-icon-delete"
            {{action "deleteClicked" target=view}}>
                Delete
        </a>
    </div>
</div>
